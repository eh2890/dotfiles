# ---------------------------------------
# Figures, images, visuals
# ---------------------------------------

# -------------------- img
snippet img "\figure with img" bA
\\begin{figure}[H]
	\\centering
	\\includegraphics[width = $1cm]{img/$2}
	\\label{fig:$2}
\\end{figure}
$0
endsnippet

# -------------------- tikz
snippet tikz "tikzpicture" b
\\begin{figure}[H]
	\\centering
	\\begin{tikzpicture}
		$0
	\\end{tikzpicture}
\end{figure}
endsnippet

# -------------------- trnode
snippet trnode "tikz regular node" bA
\\node ($1) at ($2, $3) {$$4$};
$0
endsnippet

# -------------------- tsnode
snippet tsnode "tikz state node" bA
\\node[${1:state, align=center}] ($2) at ($3, $4) {$$5$};
$0
endsnippet

# -------------------- tikzdraw
snippet tdraw "tdraw" bA
\\draw[${1:->, auto}]
	$0
	;
endsnippet

# -------------------- trline
snippet trline "trline" bA
($1, $2) -- ($3, $4)
$0
endsnippet

# -------------------- tsarrow
snippet tsarrow "tikz state arrow" bA
($1) edge[$2] node[${3:in place}] {$$4$} ($5)
$0
endsnippet



